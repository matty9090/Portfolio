extends layout

block content
    .row
        .col.s12
            .card
                .card-content.flow-text
                    p Currently studying for a masters in <a href="http://www.uclan.ac.uk/courses/mcomp_computer_games_development.php" target="_blank">Games Development</a> at the <a href="https://www.uclan.ac.uk/" target="_blank">University of Central Lancashire</a>
                    p I was a finalist in the 2018 <a href="http://gradsingames.com/game-dev-challenges/rising-star/" target="_blank">Sumo Digital Rising Star competition</a>, with my game <a href="https://matty9.itch.io/sphereroll" target="_blank">SphereRoll</a>.

    .row
        each column in projects
            .col.m12.l4
                each project in column
                    .card
                        .card-image
                            video(playsinline loop autoplay=true style='width: 100%; height: 100%')
                                source(src=project.img type='video/mp4')

                        .card-content.center-align
                            p= project.name